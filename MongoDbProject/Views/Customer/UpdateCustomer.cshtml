@model MongoDbProject.Dtos.CustomerDto.GetByIdCustomerDto
@{
    ViewData["Title"] = "UpdateCustomer";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<div class="container">
    <br />
    <br>
    <form method="post">
        <label>Müşteri Adı</label>
        <input type="hidden" asp-for="CustomerId" />
        <input type="text" class="form-control" asp-for="CustomerName" />
        <br>
        <label>Müşteri Soyadı</label>
        <input type="text" class="form-control" asp-for="CustomerSurname" />
        <br>
        <label>Adres</label>
        <input type="text" class="form-control" asp-for="CustomerAddress" />
        <br>
        <label>Telefon</label>
        <input type="text" class="form-control" asp-for="CustomerPhone" />
        <br>
        <button class="btn btn-primary">Müşteri Bilgilerini Güncelle</button>
    </form>
</div>
