@model List<MongoDbProject.Dtos.CustomerDto.ResultCustomerDto>
@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/Shared/_UILayout.cshtml";
    int count = 0;
}
<div class="container">
    <br /><br />
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Müşteri Adı</th>
            <th>Müşteri Soyadı</th>
            <th>Adres</th>
            <th>Telefon</th>
            <th>Sipariş</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.CustomerFullName</td>
                <td>@item.CustomerAddress</td>
                <td>@item.CustomerPhone</td>
                <td>Şipraişs no</td>
                <td><a class="btn btn-danger" href="/Customer/RemoveCustomer/@item.CustomerId">Sil</a></td>
                <td><a class="btn btn-info" href="/Customer/UpdateCustomer/@item.CustomerId">Güncele</a></td>
            </tr>
        }
    </table>
    <a class="btn btn-info" href="/Customer/CreateCustomer/">Ekle</a>

</div>